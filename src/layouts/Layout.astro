---
interface Props {
  title?: string;
}

const { title = "Fulean2 - Contador de Efectivo" } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=5.0, viewport-fit=cover" />
    <meta name="description" content="Aplicación móvil para contar efectivo CUP y convertir a USD, EUR y CAD" />
    
    <!-- Theme & PWA -->
    <meta name="theme-color" content="#0a0a0a" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
    <meta name="apple-mobile-web-app-title" content="Fulean2" />
    
    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="apple-touch-icon" href="/favicon.svg" />
    
    <!-- Generator -->
    <meta name="generator" content={Astro.generator} />
    
    <title>{title}</title>
  </head>
  <body class="bg-neutral-950 text-neutral-300 min-h-dvh flex flex-col antialiased">
    <slot />
  </body>
</html>

<style is:global>
  @import "../styles/global.css";
</style>
